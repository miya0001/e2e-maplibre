{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "include": [
    "features/**/*.ts",
    "support/**/*.ts",
    "pages/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
